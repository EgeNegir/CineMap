<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YENİ FİLM EKLE"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="220dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/imgFilmAfis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resim seçmek için yukarıya tıklayın"
            android:textColor="#AAAAAA"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/edtFilmAdi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#333333"
            android:hint="Film Adı"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:paddingStart="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="textCapWords"/>

        <EditText
            android:id="@+id/edtYonetmen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#333333"
            android:hint="Yönetmen"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:paddingStart="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/edtCikisYili"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#333333"
            android:hint="Çıkış Yılı (Örn: 1994)"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:inputType="number"
            android:paddingStart="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edtBasroller"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#333333"
            android:hint="Başroller (Samuel L. Jackson, vb.)"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:paddingStart="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Film Türü Seçin:"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="2dp"/>

        <Spinner
            android:id="@+id/spinnerTur"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#333333"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:spinnerMode="dropdown"/>

        <EditText
            android:id="@+id/edtPuan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#333333"
            android:hint="IMDb Puanı (Örn: 8.7)"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:inputType="numberDecimal"
            android:paddingStart="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edtAciklama"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#333333"
            android:hint="Film Özeti"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:gravity="top|start"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:inputType="textMultiLine"/>

        <Button
            android:id="@+id/btnKaydet"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="FİLMİ KAYDET"
            android:backgroundTint="#E50914"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>