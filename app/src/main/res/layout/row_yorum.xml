<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#222222"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtYorumYapan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanıcı Adı"
            android:textColor="#E50914"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <RatingBar
            android:id="@+id/ratingYorumRow"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:progressTint="#FFD700"
            app:layout_constraintStart_toEndOf="@id/txtYorumYapan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/txtYorumYapan"/>

        <TextView
            android:id="@+id/txtYorumIcerik"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Yorum içeriği..."
            android:textColor="#CCCCCC"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnYorumSil"
            app:layout_constraintTop_toBottomOf="@id/txtYorumYapan"/>

        <LinearLayout
            android:id="@+id/voteLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtYorumIcerik">

            <ImageView
                android:id="@+id/btnUpvote"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/arrow_up_float"
                app:tint="#AAAAAA"/>

            <TextView
                android:id="@+id/txtOySayisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFFFFF"
                android:layout_marginHorizontal="8dp"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/btnDownvote"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/arrow_down_float"
                app:tint="#AAAAAA"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btnYorumSil"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="#FF0000"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>