<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imgDetayResim"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/txtDetayBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Film Başlığı"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/txtDetayYil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1994"
                    android:textColor="#AAAAAA"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  |  "
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/txtDetayTur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tür"
                    android:textColor="#AAAAAA"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  |  "
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/txtCineMapPuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CineMap: 0.0"
                    android:textColor="#00E676"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtDetayBasroller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Başroller: Oyuncu isimleri buraya gelecek"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:alpha="0.8"/>

            <TextView
                android:id="@+id/txtDetayAciklama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Film açıklaması..."
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Yorumlar"
                android:textColor="#E50914"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingBarYorum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:rating="0"
                android:progressTint="#FFD700"
                android:layout_marginBottom="10dp"
                style="@style/Widget.AppCompat.RatingBar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtYorum"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#333333"
                    android:hint="Yorum yaz..."
                    android:textColor="#FFFFFF"
                    android:textColorHint="#888888"
                    android:paddingStart="10dp"/>

                <Button
                    android:id="@+id/btnGonder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GÖNDER"
                    android:backgroundTint="#E50914"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerYorumlar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
            app:backgroundTint="#E50914"
            app:tint="#FFFFFF"
            android:visibility="gone"
            app:fabSize="mini"
            android:layout_marginEnd="10dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabGuncelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            app:backgroundTint="#FFC107"
            app:tint="#000000"
            android:visibility="gone"
            app:fabSize="mini"
            android:layout_marginEnd="10dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabIzledim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_view"
            app:backgroundTint="#333333"
            app:tint="#FFFFFF"
            android:layout_marginEnd="10dp"
            app:fabSize="mini"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabListem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="#333333"
            app:tint="#FFFFFF"
            android:layout_marginEnd="10dp"
            app:fabSize="mini"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabFavori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_off"
            app:backgroundTint="#FFFFFF"
            app:tint="#E50914"
            app:fabSize="mini"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>